<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Magenerds\SystemConfigDiff\Api\Service\FetchRemoteDataServiceInterface"
                type="Magenerds\SystemConfigDiff\Service\FetchRemoteDataService" />

    <preference for="Magenerds\SystemConfigDiff\Api\Service\FetchLocalDataServiceInterface"
                type="Magenerds\SystemConfigDiff\Service\FetchLocalDataService" />

    <preference for="Magenerds\SystemConfigDiff\Remote\ClientInterface"
                type="\Magenerds\SystemConfigDiff\Remote\Client" />

    <type name="Magenerds\SystemConfigDiff\Differ\DifferPool">
        <arguments>
            <argument name="differ" xsi:type="array">
                <item name="storeConfig" xsi:type="string">Magenerds\SystemConfigDiff\Differ\StoreConfigDiffer</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="configDiffExecuteCommand" xsi:type="object">Magenerds\SystemConfigDiff\Console\Command\ExecuteCommand</item>
            </argument>
        </arguments>
    </type>
</config>
